		"eslint-config-prettier": "^10.1.8",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.38.3",
		"svelte-check": "^4.3.1",
