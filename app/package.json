		"eslint": "^8.0.0",
		"eslint-config-prettier": "^9.1.0",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"svelte": "^4.2.19",
		"svelte-check": "^3.6.9",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.9"
