		"@sveltejs/kit": "^2.16.1",
		"@typescript-eslint/eslint-plugin": "^8.24.0",
		"@typescript-eslint/parser": "^8.21.0",
		"eslint": "^9.19.0",
		"eslint-config-prettier": "^10.0.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.16.0",
		"svelte-check": "^4.1.4",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"vite": "^6.0.11"
	},
	"type": "module"
}
